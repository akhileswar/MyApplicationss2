<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfdfdfdf"
    tools:context="com.akhil.breuna.myapplicationss.Buttons">

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"
        android:height="80sp"
        android:background="@drawable/trans"
        android:text="View-Contacts              >>"
        android:textSize="21sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_below="@+id/button10"
        android:layout_marginTop="10dp"
        android:height="80sp"
        android:background="@drawable/trans"
        android:text="ADD-Contact                >>"
        android:textSize="21sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:layout_below="@+id/button11"
        android:layout_marginTop="10dp"
        android:height="80sp"
        android:background="@drawable/trans"
        android:text="Search-Contact          >>"
        android:textSize="21sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:layout_below="@+id/button12"
        android:layout_marginTop="10dp"
        android:height="80sp"
        android:background="@drawable/trans"
        android:text="DELETE-CONTACT           >>"
        android:textSize="21sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:layout_marginTop="10dp"
        android:height="80sp"
        android:background="@drawable/trans"
        android:text="SIGN-OUT                      >>"
        android:textSize="21sp"
        android:textStyle="italic" />
</RelativeLayout>
