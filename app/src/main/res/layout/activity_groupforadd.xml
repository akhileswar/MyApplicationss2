<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfdfdfdf"
    tools:context="com.akhil.breuna.myapplicationss.groupforadd">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:divider="@color/common_google_signin_btn_text_light_default"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/ed"
        android:text="ADD"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignStart="@+id/listView"
        android:layout_alignTop="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:background="@drawable/btn"
        android:ems="10"
        android:hint="Create Group"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />
</RelativeLayout>
